<Window x:Name="IT9000Window" x:Class="Quva.DeviceSimulator.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Quva.DeviceSimulator"
        mc:Ignorable="d"
        Title="Scale IT9000" Height="450" Width="800" Closed="IT9000Window_Closed">
    <Grid>
        <Button x:Name="BtnStartSimul" Content="Start Simulation " HorizontalAlignment="Left" Margin="67,55,0,0" VerticalAlignment="Top" Click="BtnStartSimul_Click"/>
        <Slider x:Name="WeightSlider" HorizontalAlignment="Left" Margin="67,153,0,0" VerticalAlignment="Top" Width="695" ValueChanged="WeightSlider_Changed" Maximum="99" Minimum="-5" AutomationProperties.HelpText="set weight"/>
        <Label Content="Weight" HorizontalAlignment="Left" Margin="67,126,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edWeight" HorizontalAlignment="Left" Margin="127,131,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="60" IsEnabled="False"/>
        <CheckBox x:Name="chbStandstill" Content="Standstill" HorizontalAlignment="Left" Margin="67,190,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
