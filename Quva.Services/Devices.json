{
  "database": {
    "user": "quva_api",
    "pw": "QUVATESTNEU",
    "datasource": "TEST_FRECHEN19"
  },


  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Enrichers.ShortTypeName"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Error",
        "Devices": "Debug",
        "SapTransfer.Services.Services.FtpsService": "Information",
        "FTP": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithShortTypeName"
    ],
    "XXFilter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}][{ShortTypeName}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:/temp/angular/logs/Devices-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "100",
          "outputTemplate": "{Timestamp:HH:mm:ss} [{Level:u3}][{ShortTypeName}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}